<?xml version="1.0"?>
<config>
    <modules>
	<Ironizm_Background>
	    <version>0.1.0</version>
	</Ironizm_Background>
    </modules>
    <frontend>
	<routers>
	    <background>
		<use>standard</use>
		<args>
		    <module>Ironizm_Background</module>
		    <frontName>background</frontName>
		</args>
	    </background>
	</routers>
	<layout>
	    <updates>
		<background>
		    <file>background.xml</file>
		</background>
	    </updates>
	</layout>
    </frontend>
    <admin>
	<routers>
	    <background>
		    <use>admin</use>
		    <args>
			    <module>Ironizm_Background</module>
			    <frontName>adminbackground</frontName>
		    </args>
	    </background>
	</routers>
    </admin>
    <adminhtml>
	<menu>
	    <background module="background">
		    <title>Background</title>
		    <sort_order>71</sort_order>               
		    <children>
			    <items module="background">
				    <title>Manage Images</title>
				    <sort_order>0</sort_order>
				    <action>background/adminhtml_background</action>
			    </items>
		    </children>
	    </background>
	</menu>
	<acl>
		<resources>
			<all>
				<title>Allow Everything</title>
			</all>
			<admin>
				<children>
					<Ironizm_Background>
						<title>Background Module</title>
						<sort_order>10</sort_order>
					</Ironizm_Background>
				</children>
			</admin>
		</resources>
	</acl>
	<layout>
		<updates>
			<background>
				<file>background.xml</file>
			</background>
		</updates>
	</layout>
    </adminhtml>   
    <global>
	<models>
	    <background>
		<class>Ironizm_Background_Model</class>
		<resourceModel>background_mysql4</resourceModel>
	    </background>
	    <background_mysql4>
		<class>Ironizm_Background_Model_Mysql4</class>
		<entities>
		    <background>
			<table>background</table>
		    </background>
		</entities>
	    </background_mysql4>
	</models>
	<resources>
	    <background_setup>
		<setup>
		    <module>Ironizm_Background</module>
		</setup>
		<connection>
		    <use>core_setup</use>
		</connection>
	    </background_setup>
	    <background_write>
		<connection>
		    <use>core_write</use>
		</connection>
	    </background_write>
	    <background_read>
		<connection>
		    <use>core_read</use>
		</connection>
	    </background_read>
	</resources>
	<blocks>
	    <background>
		<class>Ironizm_Background_Block</class>
	    </background>
	</blocks>
	<helpers>
	    <background>
		<class>Ironizm_Background_Helper</class>
	    </background>
	</helpers>
    </global>
</config>